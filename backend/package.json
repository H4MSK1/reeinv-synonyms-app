{
  "name": "reeinv-synonyms-app-backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev tsx watch src/index.ts",
    "start:dev": "cross-env NODE_ENV=dev tsx src/index.ts",
    "start:prod": "cross-env NODE_ENV=prod tsx src/index.ts",
    "test": "cross-env NODE_ENV=test jest",
    "test:dev": "cross-env NODE_ENV=test jest --watch",
    "lint": "eslint ./src --ext ts",
    "lint:fix": "pnpm lint --fix",
    "format:check": "prettier ./src --check",
    "format:fix": "prettier ./src --write --cache",
    "prepare": "cd .. && husky backend/.husky"
  },
  "lint-staged": {
    "**/*.{ts}": [
      "pnpm run format:fix",
      "pnpm run lint:fix"
    ]
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.30",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0",
    "tsx": "^4.10.5"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.2.2"
  }
}
