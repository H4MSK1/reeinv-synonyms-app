{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "v8",
  "roots": ["<rootDir>/src/"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "testMatch": ["*/**/*.{test.ts,spec.ts}"],
  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 75,
      "lines": 75,
      "statements": 75
    }
  }
}
